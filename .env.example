# Database
DATABASE_URL="postgresql://user:password@localhost:5432/newspaper_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# Sanity
SANITY_PROJECT_ID="your-project-id"
SANITY_DATASET="production"
SANITY_API_VERSION="2023-05-03"
SANITY_TOKEN="your-token" # Optional

# Email Configuration (using a service like SendGrid, Mailgun, or SMTP)
EMAIL_SERVICE="smtp" # or "sendgrid", "mailgun"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@schoolnewspaper.com"

# OTP Configuration
OTP_EXPIRY_MINUTES="10"
